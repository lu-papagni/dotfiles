{{- /* ft: gitconfig */ -}}

{{ $useDelta := lookPath "delta" -}}

[user]
	email = papagniluca4@gmail.com
	name = lu-papagni
[credential]
	helper = cache --timeout 21600
	helper = oauth
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[core]
	editor = nvim --cmd 'let g:git_editor=1'
  {{ if $useDelta -}}
	pager = delta
  {{ end }}
[interactive]
  {{ if $useDelta -}}
	diffFilter = delta --color-only
  {{ end }}
[init]
	defaultBranch = main
